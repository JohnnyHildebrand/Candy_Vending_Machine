@{
	ViewData["Title"] = "Candy";
}
<h1>Candy</h1>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Weight(grams)</th>
			<th>Price</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in @Model.Candys)
			{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.Name</td>
				<td>@item.Weight</td>
				<td>@item.Price</td>
			</tr>
			}
	</tbody>
</table>

